@model List<WebApplication1.Models.History>

<h1 class="header">@ViewData["Title"] Калькулятор</h1>

<style>
    H4 {
        font-family: Verdana, Arial, Helvetica, sans-serif;
        color: #333366;
        text-align: center;
    }

    H1 {
        background: #faf0e6;
        border: 2px dashed maroon;
        color: #a0522d;
        padding: 7px;
    }

    table tr:nth-child(2n) td {
        background: #F5ECCE;
        border: 1px solid;
    }

    table tr:nth-child(2n+1) td {
        background: #D8F4A2;
        border: 1px solid;
    }

    th {
        background: white;
        color: black;
        font-family: 'Malgun Gothic';
        font-size: 100%;
        border: 1px solid;
    }

    tbody td:hover {
        font-weight: 800;
        color: black;
        text-align: left;
    }

    tbody tr:hover:not(:first-child) {
        font-weight: 800;
        color: black;
        text-align: left;
    }

    #col1 {
        width: 15%;
    }


    body {
        margin: 0;
    }

    #sidebar, #content {
        position: absolute;
    }

    #sidebar, #content {
        overflow: auto;
        padding: 10px;
    }

    #header {
        height: 80px;
        background: #FEDFC0;
        border-bottom: 2px solid #7B5427;
    }

    #sidebar {
        width: 200px;
        background: #ECF5E4;
        border-right: 1px solid #231F20;
        top: 82px;
        bottom: 10px;
        left: 10px;
    }

    #content {
        top: 82px;
        left: 232px;
        bottom: 10px;
        right: 0;
    }
</style>

    <meta http-equiv=Content-Type content="text/html;charset=utf-8">
<div id="sidebar">
    <h4> Введите выражение для расчёта: </h4>
    <form method="post" asp-action="Submit">
        <p><input type="text" value="@Model.First().Expression" name="Expression"></p>
        <p><input type="submit" value="Рассчитать!"></p>
        <p></p>
    </form>
    <h4> Сортировать историю: </h4>
    <form asp-controller="Home" asp-action="Index">
        <p>
            <input type="text" value="@ViewBag.searchExpression" name="searchExpression">
            <input type="submit" value="по выражениям" />

        </p>
        <p>
            <input type="text" value="@ViewBag.searchHost" name="searchHost">
            <input type="submit" value="по хосту" />
        </p>
    </form>
</div>

<div id="content">
    <table>
        <tr><th>Выражение</th><th>Результат</th><th>Адрес</th><th>Время обращения</th></tr>
        @foreach (var logItem in Model)
        {
            @:<tr><td>@(logItem.Expression)</td><td> = @(logItem.Result)</td><td id="col1">@(logItem.Host)</td><td id="col1">@(logItem.CreatedDateTime)</td></tr>
        }
    </table>
</div>
